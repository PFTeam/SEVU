<%= simple_form_for @usuario, :html => { :multipart => true } do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
         <font color="red"><li><%= message %></li></font>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="col-lg-6">
		<div class="inputs">
			<% if params[:type] then %>
				<%= f.input :legajo, label: 'Legajo', placeholder: 'Legajo...', :required => true, :autofocus => true %>
				<%= f.input :type,:as => :hidden, input_html: {value: params[:type]} %>
			<% end %>
			<%= f.input :nombreUsuario, label: 'Nombre de Usuario', placeholder: 'Usuario...', :required => true, :autofocus => true %>
			<br></br> 
			<%= f.input :encrypted_password , label: 'Contraseña', disabled: true, placeholder: 'Contraseña...', :required => true, :autofocus => true %>
			<br></br>
			<%= f.input :apellido_nombre, label: 'Apellido, Nombre', placeholder: 'Nombre...', :required => true, :autofocus => true %>
			<br></br> 
			<%= f.input :email , label: 'Correo Electronico', placeholder: 'E-mail...', :required => true, :autofocus => true %>
			<br></br>
			<%= f.input :direccion, label: 'Dirección', placeholder: 'Calle, N°, Localidad, Provincia', :required => true, :autofocus => true %>
			<br></br> 
			<%= f.file_field :foto , label: 'Foto: ', :required => true, :autofocus => true %>
			<br></br>
		</div>
		<div class="actions">
		  <%= f.button :submit, "Aceptar", :class => "btn btn-primary btn-lg" %>
		</div>
	
	<br></br>
 
	</div>
<% end %>


