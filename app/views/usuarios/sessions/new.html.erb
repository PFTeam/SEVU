<h1>Sistema Estudiantil de Voluntariado Universitario</h1>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<ol class="breadcrumb">
    <li><i class="icon-dashboard"></i><%= link_to 'Registrarme', new_registration_path(resource_name) %></li>
  </ol>
<div class="col-lg-6">
	<div class="inputs">
    <%= f.input :email, label: 'E-Mail', placeholder: 'usuario@dominio.com', :required => false, :autofocus => true %>
		<br></br>
    <%= f.input :password, label: 'Contraseña', hint: 'Verifique el bloqueo de mayúscula (Bloq Mayús).', :required => false %>
    <!--<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>-->
  </div>
  <br></br>
  <div class="col-lg-6">
  <div class="actions">
    <%= f.button :submit, 'Ingresar' %>
  </div>
</div>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Olvido su contraseña?", new_password_path(resource_name) %><br />
<% end -%>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Enviar instrucciones de desbloqueo", new_unlock_path(resource_name) %><br />
<% end -%>
