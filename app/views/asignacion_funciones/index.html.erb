<div class="col-lg-12">
  <h2>Lista de Asignaciones de Funciones a Usuarios</h2>
  <div class="table-responsive  col-lg-12">
    <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Fecha</th>
      		<th>Es Actual</th>
					<th>Descripcion</th>
					<th>Usuario</th>
      		<th>Rol</th>
      		<th colspan="3"></th>
    		</tr>
  		</thead>
    <tbody>
    <% @asignacion_funciones.each do |asignacion_funcion| %>
      <tr>
        <td><%= asignacion_funcion.created_at %></td>
        <td><%= asignacion_funcion.esActual %></td>
        <td><%= asignacion_funcion.descripcion %></td>
				<%if asignacion_funcion.usuario != nil %>
        <td><%= Usuario.find(asignacion_funcion.usuario).nombreUsuario %></td>
				<% else  %>
				<td></td>
				<% end  %>
        <td><%= Rol.find(asignacion_funcion.rol).nombre %></td>
        <td><%= link_to 'Editar', edit_asignacion_funcion_path(asignacion_funcion) %></td>
        <td><%= link_to 'Eliminar', asignacion_funcion, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

