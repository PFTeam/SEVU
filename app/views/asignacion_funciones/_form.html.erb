<%= simple_form_for(@asignacion_funcion) do |f| %>
   <% if @asignacion_funcion.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @asignacion_funcion.errors.full_messages.each do |message| %>
         <font color="red"><li><%= message %></li></font>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-lg-6">
		<div class="inputs">
			<br></br>
			<%= f.label 'Rol: ' %>
			<%= f.collection_select :rol_id, Rol.where(tipo_rol: TipoRol.where(nombre:'Sistema')), :id, :nombre, :prompt => true, :required => true %><br></br>
			<%= f.label 'Usuario: ' %>
			<%= f.collection_select :usuario_id, Usuario.all, :id, :nombreUsuario,  :prompt => true, :required => true %><br></br>
			<%= f.label 'Descripcion: ' %><br></br>
    	<%= f.text_area :descripcion %><br></br>
			<%= f.label 'Es Actual?: ' %>
			<%= f.check_box :esActual, :required => true, :autofocus => true %><br></br>
		</div>
		<div class="actions">
		  <%= f.button :submit, "Aceptar", :class => "btn btn-primary btn-lg" %>
		</div>
	
	<br></br>
 
	</div>
<% end %>

