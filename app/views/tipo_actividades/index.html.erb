<h1>Listing tipo_actividades</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_actividades.each do |tipo_actividad| %>
      <tr>
        <td><%= tipo_actividad.titulo %></td>
        <td><%= tipo_actividad.descripcion %></td>
        <td><%= link_to 'Ver', tipo_actividad %></td>
        <td><%= link_to 'Editar', edit_tipo_actividad_path(tipo_actividad) %></td>
        <td><%= link_to 'Borrar', tipo_actividad, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo actividad', new_tipo_actividad_path %>
