<h1>Gestionar Conceptos de Gastos <small>Administración de los conceptos</small></h1>
<ol class="breadcrumb">
  <li><i class="icon-dashboard"></i> Gestionar Conceptos</li>
  <li class="active"><i class="icon-file-alt"></i> Conceptos</li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <% if @conceptos.nil? then %>
      <h4> No existen actualmente Conceptos de gastos </h4>
    <% else %>   
      <% @conceptos.each do |concepto|%>
        <div class="col-lg-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h4 class="panel-title"> 
                <%= concepto.titulo %> 
                <small>
                  <td><%= link_to '(Modificar)', edit_concepto_gasto_path(concepto) %></td>
                  <td><%#= link_to '(Eliminar)', [restriccion, detalle], method: :delete, data: { confirm: 'Esta seguro?' } %></td>
                </small>
              </h4> 
            </div>
            <div class="panel-body">
              <h4> Descripción: </h4>
              <p> <%= concepto.descripcion %> </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <br></br>
    <br></br>
    <div align="center">  
    <br></br>
      <%= link_to "Agregar concepto", new_concepto_gasto_path, class: "btn btn-primary btn-lg" %> 
    </div>
  </div>
</div>
        

