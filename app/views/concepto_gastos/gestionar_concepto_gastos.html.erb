<h1>Gestionar Conceptos de Gastos <small>Administración de los conceptos</small></h1>
<ol class="breadcrumb">
  <li><i class="icon-dashboard"></i> Gestionar Conceptos</li>
  <li class="active"><i class="icon-file-alt"></i> Conceptos</li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <% if flash.count > 0 then%>
      <div class="col-lg-4"></div>
        
          <div class="alert alert-danger col-lg-4">
            <a class="close" data-dismiss="alert">x</a>
            <strong><%#= pluralize(flash.count, "Error") %>Error:</strong>
            <ul>
              <% flash.each do |key, value| %>
                <%= value %>
              <% end %>
            </ul>
          </div>

      </div>
          <!--</div>-->
    <% end %>

    <% if @conceptos.empty? then %>
      <h3> No existen actualmente Conceptos de gastos </h3>
    <% else %>   
      <% @conceptos.each do |concepto|%>
        <div class="col-lg-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h4 class="panel-title"> 
                <%= concepto.titulo %> 
                <small>
                  <td><%= link_to content_tag(:i, fa_icon("trash 2x", text: "")), concepto, method: :delete, data: { confirm: 'Esta seguro?' }, :style=>'padding-left: 6px;color:#FFFFFF;float:right', title: "Eliminar" %></td>
                  <td><%= link_to content_tag(:i, fa_icon("pencil-square-o 2x", text: "")), edit_concepto_gasto_path(concepto), :style=>'padding-left: 6px;color:#FFFFFF;float:right', title: "Editar" %></td>
                </small>
              </h4> 
            </div>
            <div class="panel-body">
              <h4> Descripción: </h4>
              <p> <%= concepto.descripcion %> </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <br></br>

    <div align="center">  

      <%= link_to "Agregar concepto", new_concepto_gasto_path, class: "btn btn-primary btn-lg" %> 
    </div>
  </div>
</div>
        

