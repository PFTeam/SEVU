<%= simple_form_for(@asignacion_rol_predefinido) do |f| %>
   <% if @asignacion_rol_predefinido.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @asignacion_rol_predefinido.errors.full_messages.each do |message| %>
         <font color="red"><li><%= message %></li></font>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-lg-6">
		<div class="inputs">
			<%= f.label 'Rol: ' %>
			<%= f.collection_select :rol_id, Rol.all, :id, :nombre,  :prompt => true, :required => true %><br></br>
			<%= f.label 'Privilegio: ' %>
			<%= f.collection_select :privilegio_id, Privilegio.all, :id, :nombre,  :prompt => true, :required => true %><br></br>
			<%= f.label 'Es Actual?: ' %>
			<%= f.check_box :esActual, :required => true, :autofocus => true %><br></br>
		</div>
		<div class="actions">
		  <%= f.button :submit, "Aceptar", :class => "btn btn-primary btn-lg" %>
		</div>
	
	<br></br>
 
	</div>
<% end %>

