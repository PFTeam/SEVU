<h1>Listing notas</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Voluntario</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notas.each do |nota| %>
      <tr>
        <td><%= nota.titulo %></td>
        <td><%= nota.descripcion %></td>
        <td><%= nota.voluntario %></td>
        <td><%= nota.usuario %></td>
        <td><%= link_to 'Ver', nota %></td>
        <td><%= link_to 'Editar', edit_nota_path(nota) %></td>
        <td><%= link_to 'Borrar', nota, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nota', new_nota_path %>
