<!----->
		<h2>Roles y Privilegios</h2>
<div class="col-lg-12">
  
  <div class="table-responsive  col-lg-5">
		 <h3>Lista de Roles</h3>
    <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Nombre</th>
					<th>Tipo</th>
      		<th>Descripcion</th>
    		</tr>
  		</thead>
    	<tbody>
       	<% @roles.to_enum(:each_with_index).each do |rol,i| %>
      		<tr>
       	 		<td><%= link_to rol.nombre, roles_path(:rol_id => rol.id) %></td>
						<td><%= @tipo_roles[i]  %></td>
       	 		<td><%= rol.descripcion %></td>
        		<td><%= link_to 'Editar', edit_rol_path(rol) %>  <%= link_to 'Eliminar', rol, method: :delete, data: { confirm: 'Esta seguro de eliminar el rol?' } %></td>
      		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>

	<% if @rol_id != 0 %>
  <div class="table-responsive  col-lg-7">
    <h3>Privilegios de Rol de <%= @rol.nombre %></h3>
	  <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Nombre</th>
      		<th>Descripcion</th>
					<th>Es Actual?</th>
    		</tr>
  		</thead>
      <tbody>
			<% @arp.each do |arp| %>
				<tr>
        	 <td><%= arp[:nombre] %></td>
        	 <td><%= arp[:descripcion] %></td>
					<td><%= arp[:actual] %></td>
					<td><%= link_to 'Editar', edit_asignacion_rol_predefinido_path(arp[:id]) %> </td>
       	</tr>
				<% end %>
      </tbody>
    </table>
		<% end %>
  </div>
</div>

