<!----->
		<h2>Roles y Privilegios</h2>
<div class="col-lg-12">
  
  <div class="table-responsive  col-lg-5">
		 <h3>Lista de Roles</h3>
    <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Nombre</th>
					<th>Tipo</th>
      		<th>Descripcion</th>
    		</tr>
  		</thead>
    	<tbody>
       	<% @roles.each do |rol| %>
      		<tr>
       	 		<td><%= link_to rol.nombre, roles_path(:rol_id => rol.id) %></td>
						<td><%= TipoRol.find(rol.tipo_rol_id).nombre  %></td>
       	 		<td><%= rol.descripcion %></td>
        		<td><%= link_to 'Editar', edit_rol_path(rol) %>  <%= link_to 'Eliminar', rol, method: :delete, data: { confirm: 'Esta seguro de eliminar el rol?' } %></td>
      		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
  
	<% rol = params[:rol_id].to_i %>
	<% if rol != 0 %>
  <div class="table-responsive  col-lg-7">
    <h3>Privilegios de Rol de <%= Rol.find(rol).nombre %></h3>
	  <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Nombre</th>
      		<th>Descripcion</th>
					<th>Es Actual?</th>
    		</tr>
  		</thead>
      <tbody>
			<% AsignacionRolPredefinido.all.each do |asignacionrolpredefinido| %>
				<% if Rol.find(asignacionrolpredefinido.rol).id == rol %> 
				<tr>
        	 <td><%= Privilegio.find(asignacionrolpredefinido.privilegio).nombre %></td>
        	 <td><%= Privilegio.find(asignacionrolpredefinido.privilegio).descripcion %></td>
					<td><%= asignacionrolpredefinido.esActual %></td>
					<td><%= link_to 'Editar', edit_asignacion_rol_predefinido_path(asignacionrolpredefinido) %> </td>
       	</tr>
				<% end %>
				<% end %>
      </tbody>
    </table>
		<% end %>
  </div>
</div>

