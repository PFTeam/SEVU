<h1>Listing requisitos</h1>
 
<table>
  <thead>
    <tr>
      <th>Actividad</th>
      <th>Habilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisitos.each do |requisito| %>
      <tr>
        <td><%= requisito.actividad %></td>
        <td><%= requisito.habilidad %></td>
        <td><%= link_to 'Ver', requisito %></td>
        <td><%= link_to 'Editar', edit_requisito_path(requisito) %></td>
        <td><%= link_to 'Borrar', requisito, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requisito', new_requisito_path %>
