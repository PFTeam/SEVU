<div class="col-lg-12">
  <h2>Lista de Tipos de Roles</h2>
    <table class="table table-hover table-striped tablesorter">
			<thead>
    		<tr>
      		<th>Nombre</th>
      		<th>Descripcion</th>
    		</tr>
  		</thead>
    	<tbody>
       	<% @tipo_roles.each do |tipo_rol| %>
      		<tr>
       	 		<td><%= tipo_rol.nombre %></td>
       	 		<td><%= tipo_rol.descripcion %></td>
        		<td><%= link_to 'Editar', edit_tipo_rol_path(tipo_rol) %></td>
      	 		<td><%= link_to 'Eliminar', tipo_rol, method: :delete, data: { confirm: 'Esta seguro de eliminar el tipo de rol?' } %></td>
      		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>
