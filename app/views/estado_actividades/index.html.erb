<h1>Listing estado_actividades</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estado_actividades.each do |estado_actividad| %>
      <tr>
        <td><%= estado_actividad.nombre %></td>
        <td><%= link_to 'Ver', estado_actividad %></td>
        <td><%= link_to 'Editar', edit_estado_actividad_path(estado_actividad) %></td>
        <td><%= link_to 'Borrar', estado_actividad, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Estado actividad', new_estado_actividad_path %>
