<!----->
<% if params[:error].to_i != 0 %>
						<p class="alert alert-dismissable alert-danger">Debe seleccionar voluntarios e items.</p>
<% end %>
<div class="col-lg-6">
	<h2>Reporte de Voluntarios</h2>
</div>
<div class="col-lg-6">
		<br></br>
	
	<%= link_to 'Generar Reporte', reporte_generado_path,  { :class=>"btn btn-primary btn-lg" } %>
</div>
<div class="col-lg-12">
	<div class="table-responsive  col-lg-4">
		<h3>Voluntarios Disponibles</h3> <!--IMPLEMENTAR TODO CON VOLUNTARIOS, AHORA ESTA TODO CON USUARIOS--->
		<table class="table table-hover table-striped tablesorter">
			<thead>
         <tr>
           <th class="col-lg-6">Nombre Usuario</th>
					 <th class="col-lg-6">Apellido y Nombre </th>
         </tr>
      </thead>
			<tbody>
			<% Usuario.all.each do |usuario| %>
				<tr>
					<td><%= usuario.nombreUsuario %></td>
					<td><%= usuario.apellido_nombre %></td>
					
					<td><%= check_box_tag ':usuarios[]', usuario.id %></td><!--ME TIENE QUE TOMAR LOS VALORES DE LOS ITEMS       =submit_tag "Email Selected Users", :name => "selected"!!!!!!!!!!!!!!!!!--->

				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
	<div class="table-responsive  col-lg-8">
		<h3>Items Disponibles</h3>
		<table class="table table-hover table-striped tablesorter">
			<thead>
         <tr>
           <th class="col-lg-12">Nombre Item</th>
         </tr>
      </thead>
			<tbody>
				<tr>
					<td>Cantidad de voluntarios en estado suspendido</td>
					<td><%= check_box_tag 'item1', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de voluntarios en estado activo</td>
					<td><%= check_box_tag 'item2', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de voluntarios en estado suspendido</td>
					<td><%= check_box_tag 'item3', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de actividades en estado creada asociado a cada voluntario</td>
					<td><%= check_box_tag 'item4', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de actividades en estado planificada asociado a cada voluntario</td>
					<td><%= check_box_tag 'item5', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de actividades en estado suspendida asociado a cada voluntario</td>
					<td><%= check_box_tag 'item6', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de actividades en estado cancelada asociado a cada voluntario</td>
					<td><%= check_box_tag 'item7', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de actividades en estado terminada asociado a cada voluntario</td>
					<td><%= check_box_tag 'item8', '' %></td>
				</tr>
				<tr>
					<td>Cantidad de horas efectivas realizadas por voluntario</td>
					<td><%= check_box_tag 'item9', '' %></td>
				</tr>
			</tbody>
 		</table>
	</div>
</div>
