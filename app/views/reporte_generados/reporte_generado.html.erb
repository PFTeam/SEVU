<%	params[:i_ids].each { |item| %>
	<br />
<div class="col-lg-12">
	<div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Gr√°fico</h3>
    </div>
    <div class="panel-body">
				<% case item

						when '1' %>

							<%= line_chart [
    {name: "Cantidad de voluntarios en estado suspendido", data: [ [Time.now, 20], [Time.at(2001,3), 30] ] },
    {name: "Study", data: [ [Time.at(2000,3), 30], [Time.at(2001,3), 20] ] },
    {name: "Conversation", data: [ [Time.at(2000,3), 50], [Time.at(2001,3), 40] ] } ],
    {library: {hAxis: {title: "Tiempo", format: 'MMM y'}, vAxis: {title: "Valores"}}} %>

				<% when '2' %>
					
				<%= line_chart [
    {name: "Cantidad de voluntarios en estado activo", data: [ [Time.now, 20], [Time.at(2001,3), 30] ] },
    {name: "Study", data: [ [Time.at(2000,3), 30], [Time.at(2001,3), 20] ] },
    {name: "Conversation", data: [ [Time.at(2000,3), 50], [Time.at(2001,3), 40] ] } ],
    {library: {hAxis: {title: "Tiempo", format: 'MMM y'}, vAxis: {title: "Valores"}}} %>

				<% when '3' %>

				<%= line_chart [
    {name: "Cantidad de actividades en estado creada asociado a cada voluntario", data: [ [Time.now, 20], [Time.at(2001,3), 30] ] },
    {name: "Study", data: [ [Time.at(2000,3), 30], [Time.at(2001,3), 20] ] },
