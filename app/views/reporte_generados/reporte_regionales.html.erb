<!----->
<% if  @error != 0 %>
						<p class="alert alert-dismissable alert-danger">Debe seleccionar regionales e items.</p>
<% end %>
<div class="col-lg-6">
	<h2>Reporte de Regionales</h2>
</div>
<div class="col-lg-6">
		<br></br>
	<%= form_tag nil, method: :get do %>
	<%= select_year(DateTime.now.year, :start_year => 2000, :end_year =>DateTime.now.year, prefix: :anio_rep) %>
	<%= submit_tag 'Generar Reporte', { :class=>"btn btn-primary btn-lg" }  %>
</div>
<div class="col-lg-12">
	<div class="table-responsive  col-lg-4">
		<h3>Regionales Disponibles</h3>
		<table class="table table-hover table-striped tablesorter">
			<thead>
         <tr>
           <th class="col-lg-6">Nombre Regional</th>
					 <th class="col-lg-6">Domicilio</th>
         </tr>
      </thead>
			<tbody>
			<% Regional.all.each do |regional|  %>
				<tr>
					<td><%= regional.nombre  %></td>
					<td><%= regional.domicilio   %></td>
					<td><%= check_box_tag 'regional_ids[]', regional.id %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
	<div class="table-responsive  col-lg-8">
		<h3>Items Disponibles</h3>
		<table class="table table-hover table-striped tablesorter">
			<thead>
         <tr>
           <th class="col-lg-12">Nombre Item</th>
         </tr>
      </thead>
			<tbody>
				<tr>
		      <td>Cantidad de proyectos por regional en estado Creado</td>
					<td><%= check_box_tag 'item_ids[]', 1 %></td>
        </tr>
        <tr>
          <td>Cantidad de proyectos por regional en estado Cancelado</td>
					<td><%= check_box_tag 'item_ids[]', 2 %></td>
        </tr>
        <tr>
          <td>Cantidad de proyectos por regional en estado Terminado</td>
					<td><%= check_box_tag 'item_ids[]', 3 %></td>
        </tr>
        <tr>
          <td>Cantidad de proyectos por regional en estado Suspendido</td>
					<td><%= check_box_tag 'item_ids[]', 4 %></td>
        </tr>
				<tr>
          <td>Cantidad de proyectos por regional en estado En Ejecución</td>
					<td><%= check_box_tag 'item_ids[]', 5 %></td>
        </tr>
        <tr>
          <td>Cantidad de voluntarios por regional en estado suspendido</td>
					<td><%= check_box_tag 'item_ids[]', 6 %></td>
        </tr>
        <tr>
          <td>Cantidad de voluntarios por regional en estado activo</td>
					<td><%= check_box_tag 'item_ids[]', 7 %></td>
        </tr>
        <tr>
          <td>Cantidad de proyectos por regional con presupuesto</td>
					<td><%= check_box_tag 'item_ids[]', 8 %></td>
        </tr>
        <tr>
          <td>Cantidad de proyectos por regional en evaluación de presupuestos.</td>
					<td><%= check_box_tag 'item_ids[]', 9 %></td>
        </tr>
        <tr>
          <td>Cantidad de presupuesto por regional</td>
					<td><%= check_box_tag 'item_ids[]', 10 %></td>
        </tr>
        <tr>
          <td>Cantidad de horas efectivas realizadas de voluntariado por regional</td>
					<td><%= check_box_tag 'item_ids[]', 11 %></td>
        </tr>
        <tr>
          <td>Cantidad de horas efectivas realizadas por regional según tipo de actividad</td>
					<td><%= check_box_tag 'item_ids[]', 12 %></td>
        </tr>
			</tbody>
 		</table>
	</div>

</div>
<% end %>
