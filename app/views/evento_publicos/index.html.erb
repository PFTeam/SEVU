<h1>Lista Eventos Públicos</h1>
<div class="row">
  <div class="col-lg-12">
    <% @evento_publicos.each do |evento_publico| %>

            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"> <%= evento_publico.nombre %></h3>
              </div>
              <div class="panel-body">
                
                <label>Descripción del Evento</label>
                <p> 
		<% if !evento_publico.descripcion.blank? %>
			<%= evento_publico.descripcion%>
		<% else %>
			No se ha cargado una descripción
		<% end %>
                </p>
                <label>Creador del Evento</label>
		<p>
		<% if evento_publico.usuario.presence %>
			<%= evento_publico.usuario%>
		<% else %>
			No se ha cargado un usuario
		<% end %>

                </p>
                <label>Fecha de Realización</label>
                <p>
		<% if !evento_publico.fechaRealizacion.blank? %>
			<%= evento_publico.fechaRealizacion.to_formatted_s(:rfc822) %>
		<% else %>
			No se ha cargado una descripción
		<% end %>
       <td><%= link_to 'Show', evento_publico %></td>
        <td><%= link_to 'Edit', edit_evento_publico_path(evento_publico) %></td>
        <td><%= link_to 'Destroy', evento_publico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
                            
                
              </div>
            </div>
          

    <% end %>      
  </div>
</div>


