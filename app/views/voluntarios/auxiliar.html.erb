<h1>Gestionar Experiencia Voluntarios <small>Modulo Voluntario</small></h1>

<div class="row">
  <div class="col-lg-12">
    <% if @experiencias.nil? then %>
      <h4> No existen actualmente Experiencias  </h4>
    <% else %>  
    <table>
  <thead>
    <tr>
      <th>Tieneexperiencia</th>
      <th>Cantidadexperiencia</th>
      <th>Habilidad</th>
      <th>Voluntario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading"> 
  	 <% @experiencias.each do |experiencia|%>
  	 
  	 
  	  <tr>
        <td><%= experiencia.tieneExperiencia %></td>
        <td><%= experiencia.cantidadExperiencia %></td>
        <td><%= experiencia.habilidad %></td>
        <td><%= experiencia.voluntario_id %></td>
        <td><%= link_to 'Show', experiencia %></td>
        <td><%= link_to 'Edit', edit_experiencia_path(experiencia) %></td>
        <td><%= link_to 'Destroy', experiencia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  	 
  	 
  	   <% end %>
  	 
  	 </div>
  		</div> 
  			</div>
     <% @tipo_habilidades.each do |tipo|%>
        <div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"> 
              
                <small>
                  <td><%= link_to '(Modificar)', edit_tipo_habilidad_path(tipo) %></td>
                </small>

                <! TODO: Eliminar los tipos de habilidades, y a su vez las Habilidades >
              </h3>
            </div>
            <div class="panel-body">
              <label> Descripción del tipo de Habilidad </label>
              <p><%= tipo.descripcion %></p>
              <div class="row">
                <% if tipo.habilidades.nil? then %>
                  <h3>No existen habilidades para este tipo o categoria </h3>
                <% else %>
                <% tipo.habilidades.each do |habilidad|%>
                  <div class="col-lg-6">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title"> 
                          <%= habilidad.nombre %> 
                          <small>
                            <td><%= link_to '(Modificar)', edit_habilidad_path(habilidad) %></td>
                            <td><%= link_to '(Eliminar)', [tipo, habilidad], method: :delete, data: { confirm: 'Esta seguro?' } %></td>
                          </small>

                        </h4> 
                      </div>
                      <div class="panel-body">
                        <label> Descripción</label>
                        <p><%= habilidad.descripcion %></li></p>
                      </div>
                    </div>
                  </div>
                <% end %>
                <% end %>
                <div align="center"> 
                  <br></br>
                  <%= link_to "Agregar habilidad", 
                    new_tipo_habilidad_habilidad_path(tipo), 
                    class: "btn btn-primary btn-lg" 
                  %> 
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div align="center">  
      <%= link_to "Agregar Tipo de Habilidad",  new_tipo_habilidad_path, class: "btn btn-primary btn-lg" %> 
    </div>
  </div>




<div class="row">
  <div class="col-lg-12">
          <label>
      <div class="form-group">
        <label>
          <% if @voluntario.experiencias.nil? then %>
            <h4> (No se poseen experiencias) </h4>
          <% else %>
          
            <h4> <% %> </h4>
          <% end %>
        </label>
           <% @habilidades.each do |habilidad| %>
      <tr>
        <td><%= habilidad.nombre %></td>
        <td><%= habilidad.descripcion %></td>
        <td><%= habilidad.tipo_habilidad %></td>
        </tr>
   <% end %> 
   
     
                 <%#= f.collection_select(:id, @habilidades, :id, :nombre, {:selected => @habilidades.id}) %>
            
            
         
      
         
          
   
     
      </div>
      
    

   
    <div align="center">  
    	

      <%= link_to "Agregar Experiencia", new_voluntario_experiencia_path(@voluntario), class: "btn btn-primary btn-lg" %> 
    </div>
