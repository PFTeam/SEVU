<h1>Lista de Colaboradores</h1>

<table>
  <thead>
    <tr>
      <th>Organizacion externa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @colaboradores.empty? then %>
      <tr>
        <td>
        <p>
          No hay Colaboradores asociados.
        </p>
        </td>
      </tr>
    <% end %>
    <% @colaboradores.each do |colaborador| %>
      <tr>
        <td><%= colaborador.organizacion_externa %></td>
        <td><%= link_to 'Ver', colaborador.organizacion_externa , :proyecto_id => colaborador.proyecto_id  %>  |  <!-- NO PASA EL PARAM -->
        <%= link_to 'Borrar', colaborador , method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
