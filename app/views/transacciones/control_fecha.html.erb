          <th class="col-lg-7">Descripci√≥n </th>
        </tr>
     </thead>
     <tbody>
			 <% Transaccion.all.each do |transaccion| %>
       <!--  if created_at between fecha_inicio and fecha_fin %> -->
       <tr>
       	 <td><%= transaccion.created_at %></td>
				 <td><!-- Usuario.find(Sesion.find(transaccion.sesion_id).usuario_id).nombreUsuario --></td>    
