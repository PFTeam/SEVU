<h2>Control de Usuario</h2>
<div class="col-lg-12">
  <div class="table-responsive  col-lg-4">
    <h3>Usuarios Disponibles</h3>
    <table class="table table-hover table-striped tablesorter">
			<thead>
         <tr>
           <th class="col-lg-2">Nombre Usuario</th>
					 <th class="col-lg-4">Apellido y Nombre </th>
         </tr>
       </thead>
      <tbody>
				<% Usuario.all.each do |usuario| %>
        <tr>
          <td><%= usuario.nombreUsuario %></td>
					<td><%= usuario.apellido_nombre %></td>
        </tr>
				<% end %>
       </tbody>
     </table>
   </div>
   <div class="table-responsive  col-lg-8">
     <h3>Transacciones</h3>
     <table class="table table-hover table-striped tablesorter">
       <thead>
         <tr>
           <th class="col-lg-3">Fecha</th>
           <th class="col-lg-10">Descripci√≥n </th>
           <th></th>
         </tr>
       </thead>
       <tbody>
				<% Transaccion.all.each do |transaccion| %>
       	<tr>
        	 <td><%= transaccion.fechaTransaccion %></td>
        	 <td><%= transaccion .descripcion %></td>
       	</tr>
				<% end %>
     	</tbody>
   	</table>
 	</div>
</div>

