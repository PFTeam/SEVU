<h2>Control de Usuario</h2>
<div class="col-lg-12">
  <div class="table-responsive  col-lg-3">
	<h3>Usuarios Disponibles</h3>
		<table class="table table-hover table-striped tablesorter">
			<thead>
				<tr>
					<th class="col-lg-5">Nombre Usuario</th>
					<th class="col-lg-5">Apellido y Nombre </th>
				</tr>
			</thead>
			<tbody>
				<% Usuario.all.each do |usuario| %>
				<tr>
					<td><%= link_to usuario.nombreUsuario, control_usuario_path(:user_id => usuario.id) %></td>
					<td><%= usuario.apellido_nombre %></td>
					<td><%= link_to "Perfil", usuario %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<% user = params[:user_id].to_i %>
	<% if user != 0 %>
   <div class="table-responsive  col-lg-9">
     <h3>Transacciones de <%= Usuario.find(user).nombreUsuario %></h3>
     <table class="table table-hover table-striped tablesorter">
       <thead>
         <tr>
           <th class="col-lg-3">Fecha</th>
           <th class="col-lg-7">Descripci√≥n </th>
					 <th class="col-lg-2">Proyecto </th>
           <th></th>
         </tr>
       </thead>
				
       <tbody>
				<% Transaccion.all.each do |transaccion| %>
				<% if transaccion.sesion_id != nil && Sesion.find(transaccion.sesion_id).usuario_id == user %> 
       	<tr>
        	 <td><%= transaccion.created_at %></td>
        	 <td><%= transaccion.descripcion %></td>
					  <% if transaccion.proyecto_id != nil %> 
				 <td><%= Proyecto.find(transaccion.proyecto_id).nombre %></td>
					<% end %>  
       	</tr>
				<% end %>
				<% end %>
     	</tbody>
   	</table>
		<% end %>
 	</div>
</div>

