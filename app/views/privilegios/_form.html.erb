<%= simple_form_for(@privilegio) do |f| %>
   <% if @privilegio.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @privilegio.errors.full_messages.each do |message| %>
         <font color="red"><li><%= message %></li></font>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-lg-6">
		<div class="inputs">
			<%= f.input :nombre, label: 'Nombre de Privilegio', placeholder: 'privilegio...', :required => true, :autofocus => true %>
			<br></br> 
			<%= f.input :descripcion, label: 'Descripción del Privilegio', placeholder: 'descripción...', :required => true, :autofocus => true %>
			<br></br>
			<%= f.label 'Tipo de Privilegio: ' %>
			<%= f.collection_select :tipo_privilegio_id, TipoPrivilegio.all, :id, :nombre,  :prompt => true, :required => true %><br></br>
		</div>
		<div class="actions">
		  <%= f.button :submit, "Aceptar", :class => "btn btn-primary btn-lg" %>
		</div>
	
	<br></br>
 
	</div>
<% end %>

