<h1>Gestionar Habilidades <small>Administración de habilidades necesarias</small></h1>
<ol class="breadcrumb">
  <li><i class="icon-dashboard"></i> Configuraciones </li>
  <li class="active"><i class="icon-file-alt"></i> Gestionar Habilidades </li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <!--<div class="col-lg-12">-->
    <% if flash.count > 0 then%>
      <div class="col-lg-4"></div>
        <div id="error_explanation" class="col-lg-4">
          <div class="alert alert-danger">
            <a class="close" data-dismiss="alert">x</a>
            <strong><%#= pluralize(flash.count, "Error") %>Error:</strong>
            <ul>
              <% flash.each do |key, value| %>
                <%= value %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
          <!--</div>-->
    <% end %>


 
    <% if @tipos_habilidades.empty? then %>
      <h4> No existen actualmente habilidades </h4>
    <% else %>   
      <% @tipos_habilidades.each do |tipo|%>
        <div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"> 
                <%= tipo.nombre %>
                <small>
                  
                  <% if tipo.habilidades.empty? then %>
                    <td title="Eliminar"><%= link_to content_tag(:i, fa_icon("trash 2x pull-right", text: "")), tipo, method: :delete, data: { confirm: 'Esta seguro?' }, style: 'padding-left: 5px;color:#FFFFFF;float:right', title: 'Eliminar'  %></td>
                    <% else %>

                      <i class="fa fa-2x fa-lock fa-inverse pull-right" title="Debe eliminar las habilidades primero"></i>

                    <!--<i class="fa fa-trash fa-2x fa-inverse pull-right"></i>-->
                  <% end %>
                  <td><%= link_to content_tag(:i, fa_icon("pencil-square-o 2x", text: "")), edit_tipo_habilidad_path(tipo), style: 'padding-left: 5px;color:#FFFFFF;float:right', title: 'Editar' %></td>
                </small>
              </h3>
            </div>
            <div class="panel-body">
              <label> Descripción del tipo de Habilidad </label>
              <p><%= tipo.descripcion %></p>
              <div class="row">
                <% if tipo.habilidades.nil? then %>
                  <h3>No existen habilidades para este tipo o categoria </h3>
                <% else %>
                <% tipo.habilidades.each do |habilidad|%>
                  <div class="col-lg-6">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title"> <%= habilidad.nombre %>
<!--                            <tr>
       					 <td><%#= experiencia.tieneExperiencia %></td>
        				<td><%#= experiencia.cantidadExperiencia %></td>
        				<td><%#= experiencia.habilidad %></td>
        				<td><%#= experiencia.voluntario_id %></td>
        				<td><%#= link_to 'Show', experiencia %></td>
        				<td><%#= link_to 'Edit', edit_experiencia_path(experiencia) %></td>
        				<td><%#= link_to 'Destroy', experiencia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      						</tr>


 -->



                          <small>

                            <% if habilidad.experiencias.count < 1 then %>
                            <td><%= link_to content_tag(:i, fa_icon("trash", text: "")), [tipo, habilidad], method: :delete, data: { confirm: 'Esta seguro?' }, style: 'padding-left: 5px;float:right', title: 'Eliminar'  %></td>
                          <% else %>
                            <td><%= link_to content_tag(:i, fa_icon("trash", text: "")), [tipo, habilidad], method: :delete, data: { disable: true, confirm: 'Esta seguro?' }, style: 'padding-left: 5px;float:right', title: 'Eliminar'  %></td>

                          <% end %>
                          <td><%= link_to content_tag(:i, fa_icon("pencil-square-o", text: "")), edit_habilidad_path(habilidad), style: 'padding-left: 5px;float:right', title: 'Editar'  %></td>
                          </small>

                        </h4> 
                      </div>
                      <div class="panel-body">
                        <label> Descripción</label>
                        <p><%= habilidad.descripcion %></li></p>
                      </div>
                    </div>
                  </div>
                <% end %>
                <% end %>
                <div align="center"> 
                  <br></br>
                  <%= link_to "Agregar habilidad", 
                    new_tipo_habilidad_habilidad_path(tipo), 
                    class: "btn btn-primary btn-lg" 
                  %> 
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div align="center">  
      <%= link_to "Agregar Tipo de Habilidad",  new_tipo_habilidad_path, class: "btn btn-primary btn-lg" %> 
    </div>
  </div>
</div>
        

