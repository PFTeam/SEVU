<h1>Gestionar Habilidades <small>Administración de habilidades necesarias</small></h1>
<ol class="breadcrumb">
  <li><i class="icon-dashboard"></i> Configuraciones </li>
  <li class="active"><i class="icon-file-alt"></i> Gestionar Habilidades </li>
</ol>

<div class="row">
  <div class="col-lg-12">
    <% if @tipos_habilidades.nil? then %>
      <h4> No existen actualmente habilidades </h4>
    <% else %>   
      <% @tipos_habilidades.each do |tipo|%>
        <div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"> 
                <%= tipo.nombre %>
                <small>
                  <td><%= link_to '(Modi fi car)', edit_tipo_habilidad_path(tipo), style: 'color:#FFFFFF;' %></td>
                </small>

                <! TODO: Eliminar los tipos de habilidades, y a su vez las Habilidades >
              </h3>
            </div>
            <div class="panel-body">
              <label> Descripción del tipo de Habilidad </label>
              <p><%= tipo.descripcion %></p>
              <div class="row">
                <% if tipo.habilidades.nil? then %>
                  <h3>No existen habilidades para este tipo o categoria </h3>
                <% else %>
                <% tipo.habilidades.each do |habilidad|%>
                  <div class="col-lg-6">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title"> 
                          <%= habilidad.nombre %> 
                          <small>
                            <td><%= link_to '(Modificar)', edit_habilidad_path(habilidad) %></td>
                            <td><%= link_to '(Eliminar)', [tipo, habilidad], method: :delete, data: { confirm: 'Esta seguro?' } %></td>
                          </small>

                        </h4> 
                      </div>
                      <div class="panel-body">
                        <label> Descripción</label>
                        <p><%= habilidad.descripcion %></li></p>
                      </div>
                    </div>
                  </div>
                <% end %>
                <% end %>
                <div align="center"> 
                  <br></br>
                  <%= link_to "Agregar habilidad", 
                    new_tipo_habilidad_habilidad_path(tipo), 
                    class: "btn btn-primary btn-lg" 
                  %> 
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div align="center">  
      <%= link_to "Agregar Tipo de Habilidad",  new_tipo_habilidad_path, class: "btn btn-primary btn-lg" %> 
    </div>
  </div>
</div>
        

