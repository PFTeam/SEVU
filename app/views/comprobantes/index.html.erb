<h1>Listing comprobantes</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comprobantes.each do |comprobant| %>
      <tr>
        <td><%= comprobant.numero %></td>
        <td><%= link_to 'Ver', comprobant %></td>
        <td><%= link_to 'Editar', edit_comprobante_path(comprobant) %></td>
        <td><%= link_to 'Borrar', comprobant, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Comprobante', new_comprobante_path %>
