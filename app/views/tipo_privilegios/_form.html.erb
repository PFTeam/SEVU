<%= simple_form_for(@tipo_privilegio) do |f| %>
  <% if @tipo_privilegio.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @tipo_privilegio.errors.full_messages.each do |message| %>
         <font color="red"><li><%= message %></li></font>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-lg-6">
		<div class="inputs">
			<%= f.input :nombre, label: 'Nombre de Tipo de Privilegio', placeholder: 'tipo de privilegio...', :required => true, :autofocus => true %>
			<br></br> 
			<%= f.input :descripcion, label: 'Descripción del Tipo de Privilegio', placeholder: 'descripción...', :required => true, :autofocus => true %>
			<br></br>
		</div>
		<div class="actions">
		  <%= f.button :submit, "Aceptar", :class => "btn btn-primary btn-lg" %>
		</div>
	
	<br></br>
 
	</div>
<% end %>
