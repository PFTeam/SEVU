
	
	 <li class="dropdown messages-dropdown">
	   <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i> Notificaciones <span class="badge"><%= @notificaciones.size %></span> <b class="caret"></b></a>
	     <ul class="dropdown-menu pre-scrollable2">	
	       <li class="dropdown-header"><%= @notificaciones.size %> Notificaciones Nuevas</li>
	       
		       <% @notificaciones.each do |notificacion| %>
			       <li class="message-preview" style="">
			       <a href="/notificacion_sistemas/<%= notificacion.id %>">
			       <span class="avatar"></span>
			       <span class="name"><%= notificacion.usuario_creador%>:</span>
			       <span class="message"><%= notificacion.mensaje %></span>
			       <span class="time"><i class="fa fa-clock-o"></i><%= notificacion.created_at.to_formatted_s(:long_ordinal) %></span>
			       </a>
			       </li>
			       <li class="divider"></li>
		       <% end %>
		    
	       <li><a href="/notificacion_sistemas">Ver todo <span class="badge"><%= @notificaciones.size %></span></a></li>
	     </ul>
	 </li>

