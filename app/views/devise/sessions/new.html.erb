<h1>Sistema Estudiantil de Voluntariado Universitario</h1>

<% if notice =! '' %>
            <div class="alert alert-dismissible alert-success 2">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= notice %>
            </div>
            <!-- PARA DEVISE (los mensajes se encuentran en devise.en.yml) -->
      <% end %>
      <% if alert != nil %>
          <p class="alert alert-dismissable alert-danger 2"><%= alert %></p> <!--PARA DEVISE (los mensajes se encuentran en devise.en.yml)-->
      <% end %>


<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<ol class="breadcrumb">
    <li><i class="icon-dashboard"></i><%= link_to 'Registrarme', new_registration_path(resource_name) %></li>
  </ol>
<div class="col-lg-6">
	<div class="form-inputs">
    <%= f.input :email, label: 'E-Mail', placeholder: 'usuario@dominio.com', :required => true, :autofocus => true %>
		<br></br>
    <%= f.input :password, label: 'Contraseña', hint: 'Verifique el bloqueo de mayúscula (Bloq Mayús).', placeholder: 'password', :required => true %>
    <!--<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>-->
  </div>
  <br></br>
  <div class="col-lg-6">
  <div class="form-actions">
    <%= f.button :submit, 'Ingresar', :class => "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>



