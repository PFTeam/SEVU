  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nueva contrase単a", :required => true, :autofocus => true %>
		<br></br>
    <%= f.input :password_confirmation, :label => "Confirmar nueva contrase単a", :required => true %>
  </div>
	<br></br>
  <div class="form-actions">
    <%= f.button :submit, "Cambiar mi contrase単a", :class => "btn btn-primary btn-lg"  %>
  </div>
<% end %>
