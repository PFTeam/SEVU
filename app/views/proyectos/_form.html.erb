<%= simple_form_for(@proyecto, html: project_form_html_options ) do |f| %>
  <% if @proyecto.errors.any? %>
    <div class="col-lg-12">
      <div class="col-lg-4"></div>
        
          <div class="alert alert-danger col-lg-4">
            <a class="close" data-dismiss="alert">x</a>      
            <strong><%= pluralize(@proyecto.errors.count, "Error") %> en la creacion del proyecto:</strong>
            <ul>
              <% @proyecto.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        
      </div>
    
  <% end %>

  <div class="row">

    <div class="col-lg-6">



          <!-- Inputs para los atributos de Proyecto -->
          <%= f.input :nombre , :label => 'Nombre del Proyecto', :placeholder => 'nombre del proyecto...' %>


          <%= f.input :breveDescripcion,:as => :text, :input_html => {:style => "resize: vertical"}, :label => 'Breve Descripción', :placeholder => 'descripción del proyecto...'  %>
          
          <%= f.input :antecedentes,:as => :text, :input_html => {:style => "resize: vertical"}, :label => 'Antecedentes Proyecto', :placeholder => 'escriba sobre los antecedentes del mismo'  %>
          
          <%= f.input :justificacionProyecto,:as => :text, :input_html => {:style => "resize: vertical"}, :label => 'Justificación', :placeholder => 'justificación del proyecto...' %>
          <%= f.input :justificacionImpacto,:as => :text, :input_html => {:style => "resize: vertical"}, :label => 'Justificación del impacto', :placeholder => 'justifique el impacto del proyecto...'  %>



    </div> 
   

    <div class="col-lg-6">

     
          <!-- Se muestra los TipoProyectos que se cargaron en el controlador --> 
          <%= f.input :tipo_proyecto_id, collection: @tipoProyectos, :label => 'Tipo de Proyecto', :required => true %>
    
      <%= f.input :fechaInicio, :as => :date, :label => 'Fecha Inicio' %>
      <%= f.input :fechaFin, :as => :date, :label => 'Fecha Fin', :required => true %>
      <%#= f.input :fechaInicio, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %> 
      <%#= f.input :fechaFin, as: :date_picker, :input_html => { :value => Date.today} %>
      <%#= f.input :fechaFin, as: :bootstrap_datepicker %>
      <%#= f.input :fechaInicio, as: :bootstrap_datepicker, input_html: { format: :long } %>
         
      <%= f.input :localizacionGeografica, :label => 'Localización Geográfica', :placeholder => 'localización...', :input_html => {:style => "resize: vertical"} %>

      <%= f.input :cantidadBeneficiariosDirectos, :label => 'Cantidad de Beneficiarios Directos', :placeholder => 'beneficiarios directos...' %>          

      <%= f.input :cantidadBeneficiariosIndirectos, :label => 'Cantidad de Beneficiarios Indirectos', :placeholder => 'beneficiarios indirectos...' %> 

     
         
  
        
    </div>

   </div>
    
  </div><!-- /.row -->

        <!-- #TODO: Sale como textarea??? -->
        <div class="modal-footer">
          <%= f.button :submit, :class => 'btn btn-primary', :value => 'Confirmar' %>
        </div>


<% end %>
